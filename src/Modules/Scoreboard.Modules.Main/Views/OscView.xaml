                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ToggleButton Margin="16,10,11,10" Cursor="Hand" IsChecked="{Binding Model.TempSettings.IsChecked[7]}"/>

